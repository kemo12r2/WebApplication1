<!-- New Arrivals -->
<div class="container">
    <h2 class="section-title">New Arrivals</h2>
    <div class="row">
        @foreach (var product in newArrivals)
        {
            <div class="col-md-3">
                <div class="card p-2">
                   <img src="@product.ImageUrl" alt="Alternate Text" />
                    <input type="hidden" value="@product.Id" class="product-id" />
                    <div class="card-body text-center">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">$@product.Price</p>
                        <button class="btn btn-transparent" onclick="changeColor(this)">
                            <i class="bi bi-bag"></i> Add to Bag
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


