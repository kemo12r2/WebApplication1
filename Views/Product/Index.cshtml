                <li><a href="#" class="text-decoration-none text-dark d-block py-1">Cleansers</a></li>
                <li><a href="#" class="text-decoration-none text-dark d-block py-1">Masks</a></li>
                <li><a href="#" class="text-decoration-none text-dark d-block py-1">Oils</a></li>
            </ul>
        </div>

        <!-- Products Section -->
        <div class="products-row">
            <div class="product-col">
                <div class="product-card">
                    <img src="~/images/cxiocmjtstll8c6dtb2rsm6fbavyfxoar46srkep.webp" />
                    <h5>Eva Glow Cream</h5>
                    <p>100 SAR</p>
                    <form action="/Card/index" method="POST">
                        <input type="hidden" name="productName" value="Eva Glow Cream">
                        <input type="hidden" name="productPrice" value="100">
                        <button type="submit" class="btn btn-transparent">Add to Cart</button>
                    </form>
                </div>
            </div>

            <div class="product-col">
                <div class="product-card">
                    <img src="~/images/ejcl9ermftbzxldjmsy2z5kejztqp60lktxb9lng (1).webp" />
                    <h5>Eva Pure Cleanser</h5>
                    <p>120 SAR</p>
                    <form action="/Card/index" method="POST">
                        <input type="hidden" name="productName" value="Eva Pure Cleanser">
                        <input type="hidden" name="productPrice" value="120">
                        <button type="submit" class="btn btn-transparent">Add to Cart</button>
                    </form>
                </div>
            </div>

            <div class="product-col">
                <div class="product-card">
                    <img src="~/images/zmmg2ec33j925tzulqb5tnk9c0g2rka5iipsisxd.webp" />
                    <h5>Eva Rose Mask</h5>
                    <p>150 SAR</p>
                    <form action="/Card/index" method="POST">
                        <input type="hidden" name="productName" value="Eva Rose Mask">
                        <input type="hidden" name="productPrice" value="150">
                        <button type="submit" class="btn btn-transparent">Add to Cart</button>
                    </form>
                </div>
            </div>

            <div class="product-col">
                <div class="product-card">
                    <img src="~/Images/WhatsApp Image 2025-03-22 at 2.07.45 PM.jpeg" />
